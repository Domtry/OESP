{
  "name": "oesp-sdk",
  "private": true,
  "version": "0.1.0",
  "description": "OESP TypeScript monorepo (core + adapters)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "version-packages": "changeset version",
    "build": "pnpm -r --sort build",
    "test": "pnpm -r test --if-present",
    "lint": "pnpm -r lint --if-present",
    "release": "pnpm -r --sort build && pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8"
  }
}
